<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the card -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the background color of the card -->
            <corners android:radius="8dp" /> <!-- Set the corner radius for a rounded card -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Set the border color and width for the card -->
        </shape>
    </item>

    <!-- Card design (adjust the dimensions as needed) -->
    <item android:left="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the color of the main card body -->
            <corners android:radius="8dp" /> <!-- Set the corner radius for a rounded card body -->
        </shape>
    </item>
    <item android:top="20dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000" /> <!-- Set the color of the top border (suit area) -->
            <corners android:radius="8dp" /> <!-- Set the corner radius for a rounded top border -->
        </shape>
    </item>

    <!-- Suit icons -->
